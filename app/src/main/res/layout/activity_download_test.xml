<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_download1"
        android:layout_width="50dp"
        android:layout_height="42dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="下载"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_pause1"
        android:layout_width="50dp"
        android:layout_height="42dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="暂停"
        android:textColor="#ffffff"
        app:layout_constraintStart_toEndOf="@+id/tv_download1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_delete1"
        android:layout_width="50dp"
        android:layout_height="42dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="48dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="删除"
        android:textColor="#ffffff"
        app:layout_constraintStart_toEndOf="@+id/tv_pause1"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/pb_progress1"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:max="100"
        android:progress="0"
        android:progressTint="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_download1" />

    <TextView
        android:id="@+id/tv_download2"
        android:layout_width="50dp"
        android:layout_height="42dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="下载"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pb_progress1" />

    <TextView
        android:id="@+id/tv_pause2"
        android:layout_width="50dp"
        android:layout_height="42dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="暂停"
        android:textColor="#ffffff"
        app:layout_constraintStart_toEndOf="@+id/tv_download2"
        app:layout_constraintTop_toBottomOf="@+id/pb_progress1" />

    <TextView
        android:id="@+id/tv_delete2"
        android:layout_width="50dp"
        android:layout_height="42dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="删除"
        android:textColor="#ffffff"
        app:layout_constraintStart_toEndOf="@+id/tv_pause2"
        app:layout_constraintTop_toBottomOf="@+id/pb_progress1" />

    <ProgressBar
        android:id="@+id/pb_progress2"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:max="100"
        android:progress="0"
        android:progressTint="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_download2" />

    <TextView
        android:id="@+id/tv_download3"
        android:layout_width="50dp"
        android:layout_height="42dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="下载"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pb_progress2" />

    <TextView
        android:id="@+id/tv_pause3"
        android:layout_width="50dp"
        android:layout_height="42dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="暂停"
        android:textColor="#ffffff"
        app:layout_constraintStart_toEndOf="@+id/tv_download3"
        app:layout_constraintTop_toBottomOf="@+id/pb_progress2" />

    <TextView
        android:id="@+id/tv_delete3"
        android:layout_width="50dp"
        android:layout_height="42dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="删除"
        android:textColor="#ffffff"
        app:layout_constraintStart_toEndOf="@+id/tv_pause3"
        app:layout_constraintTop_toBottomOf="@+id/pb_progress2" />

    <ProgressBar
        android:id="@+id/pb_progress3"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:max="100"
        android:progress="0"
        android:progressTint="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_download3" />

</android.support.constraint.ConstraintLayout>